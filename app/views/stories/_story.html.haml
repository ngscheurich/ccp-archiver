%li.story.card.card--story
  %header.card__header
    %h1.card__title.story__headline= link_to story.headline.html_safe, story
    .cover
  %ul.card__info
    %li.card__info-segment
      %h2.card__info-segment-key CMS ID
      .card__info-segment-val.story__cms-id= story.cms_id
    %li.card__info-segment
      %h2.card__info-segment-key Published At
      .card__info-segment-val.story__created-at= story.published_at
    %li.card__info-segment
      %h2.card__info-segment-key Category 
      .card__info-segment-val= story.category
    %li.card__info-segment
      %h2.card__info-segment-key Subcategory 
      .card__info-segment-val= story.subcategory
