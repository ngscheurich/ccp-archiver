!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "NOODP", :name => "ROBOTS"}/
    %meta{:content => "initial-scale=1", :name => "viewport"}/
    %title= title
    = stylesheet_link_tag "https://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Merriweather:400,400italic,700,700italic"
    = stylesheet_link_tag :application, media: "all"
    = javascript_include_tag :chartist
    = javascript_include_tag :modernizr
    = csrf_meta_tags
  %body{:class => body_class}
    %header.cd-main-header
      %a.cd-nav-trigger{href: "#0"}
        Menu
        %span
      %nav.cd-nav
        %ul.cd-top-nav
          %li
            %a{href: "#0"} Support
    %main.cd-main-content
      = render "side_nav"
      .content-wrapper
        .content
          = render "flashes"
          = yield
    = render "javascript"
